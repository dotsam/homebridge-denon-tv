{
  "pluginAlias": "DenonTv",
  "pluginType": "platform",
  "footerDisplay": "This plugin works with Sat receivers with OpenWebIf interface which is available [here](https://github.com/grzegorz914/homebridge-denon-tv).",
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "title": "Name",
        "type": "string",
        "default": "AV receiver",
        "required": true
      },
      "devices": {
        "title": "Devices",
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "host": {
              "title": "IP Address/Hostname",
              "type": "string",
              "required": true,
              "format": "hostname"
            },
            "port": {
              "title": "Port",
              "type": "integer",
              "default": 8080,
              "maximum": 65535,
              "required": true
            },
            "switchInfoMenu": {
              "title": "Switch Info/Menu",
              "type": "boolean",
              "default": true,
              "required": true
            },
            "inputs": {
              "title": "Inputs",
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "name": {
                    "title": "Input name",
                    "type": "string",
                    "default": "TVN 24",
                    "required": false
                  },
                  "reference": {
                    "title": "Input reference",
                    "type": "string",
                    "default": "DVD",
                    "required": false
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
